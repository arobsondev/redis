<p id="notice"><%= notice %></p>

<h1>Mural de Mensagens</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Corpo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensagens.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
        <td><%= link_to 'Show', mensagem_path(key) %></td>
        <td><%= link_to 'Edit', edit_mensagem_path(key) %></td>
        <td><%= link_to 'Destroy', mensagem_path(key), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end if @mensagens%>
  </tbody>
</table>

<br>

<%= link_to 'Nova Mensagem', new_mensagem_path %>
